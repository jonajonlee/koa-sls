{
  "defaultSeverity": "error",
  "extends": ["tslint:recommended", "tslint-config-airbnb"],
  "jsRules": {},
  "rules": {
    "no-console": [false],
    "max-line-length": [true, 125],
    "object-literal-sort-keys": false,
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        }
      }
    ],
    "import-name": [false],
    "object-shorthand-properties-first": false,
    "variable-name": [true, "check-format", "allow-pascal-case"],
    "strict-boolean-expressions": false,
    "max-classes-per-file": [true, 2]
  },
  "rulesDirectory": []
}
