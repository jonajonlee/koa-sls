{
  "name": "test-learning-path",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "build": "tsc -p tsconfig.prod.json",
    "build-test": "tsc -p tsconfig.test.json",
    "clean": "rm -rf dist dist_test",
    "lint": "prettier -l '{src,test}/**/*.ts'",
    "offline": "npm run build && SLS_OFFLINE=true sls offline start",
    "test": "npm run build-test && STAGE=test nyc -r lcov -r text -r html --report-dir ./docs/coverage --exclude 'dist_test/test/**/*.js' ava './dist_test/test/**/*.js' -T 300000 -c 10"
  },
  "ava": {
    "require": [
      "babel-register"
    ]
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "joi": "^13.5.2",
    "koa": "^2.5.2",
    "koa-bodyparser": "^4.2.1",
    "koa-router": "^7.4.0",
    "ramda": "^0.25.0",
    "serverless-http": "^1.6.0",
    "typescript": "^3.0.1"
  },
  "devDependencies": {
    "@types/joi": "^13.4.0",
    "@types/koa": "^2.0.46",
    "@types/koa-bodyparser": "^5.0.1",
    "@types/koa-router": "^7.0.31",
    "@types/ramda": "^0.25.35",
    "ava": "^0.25.0",
    "nyc": "^12.0.2",
    "prettier": "^1.14.0",
    "serverless-offline": "^3.25.6"
  }
}
